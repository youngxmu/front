					</div>
				</div>
				<div class="btn-wrapper">
					<span data-id="${obj.id}" class="btn-vote"><i class="ico-vote"></i>投票</span>
					<span class="txt-count" data-count="${obj.count}">${obj.count}&nbsp;票</span>
				</div>
			</div>
		{@/each}
