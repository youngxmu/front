	<script type="text/juicer" id="user_list_tpl">
		{@each list as obj, index}
			<div class="pman-detail">
				<div class="avatar" data-url="${obj.link}">
					<img src="${obj.pic}" >
				</div>
				<div class="pman-content">
					<div class="pman-info">
						<span>${obj.title}</span>
					</div>
					<div class="pman-desc">
						<div class="pman-desc-content">
							${obj.info|formatInfo}
						</div>
